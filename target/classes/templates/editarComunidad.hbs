<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/estiloGeneral.css">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/crearEstablecimientos.css">
    <meta charset="utf-8">
    <link rel="icon" href="../img/favicon.png" type="image/png">
    <title>Administrar</title>
</head>

<body class="bodyInterno centrado">

<!-- HEADER -->
<header>
    <div class="menu-container">
        <ul class="menu">
                    {{#each menus}}
                        {{#if this.activo}}
                            <li class="paginaActual"><a href="{{this.link}}"> {{this.nombre}} </a></li>
                        {{else}}
                            <li><a href="{{this.link}}"> {{this.nombre}} </a></li>
                        {{/if}}
                    {{/each}}
        </ul>
        <img src="../img/logo.png" alt="logo-header">
    </div>
    <a href="#" id="cerrarSesionLink">
          <div class="cerrar-sesion-icon">
            <i class="fa-solid fa-arrow-right-from-bracket" style="color: #ff4db5;"></i>
          </div>
    </a>
    <a href="#" id="atrasLink">
          <div class="atras-icon">
             <i class="fa-solid fa-arrow-left" style="color: #ff4db5;"></i>
          </div>
    </a>
</header>

<div>
     <h1 class="titulosMedianos">Editar Comunidad</h1>
</div>

<form id="formCrear">
     <label for="nombre">Nombre:</label>
     <input type="text" id="nombre" value="{{comunidad.nombre}}" required>

     <label for="descripcion">Descripci√≥n:</label>
     <input type="text" id="descripcion" value="{{comunidad.descripcion}}" required>

      <!-- Lista de servicios observados -->
      <label for="servicio">Servicios Observados:</label>
      <select id="servicio" multiple>
         {{#each servicios}}
            {{#if this.pertenece}}
              <option value="{{this.id}}" selected>{{this.descripcion}}</option>
            {{else}}
              <option value="{{this.id}}" >{{this.descripcion}}</option>
            {{/if}}
         {{/each}}
      </select>

      <!-- Lista de establecimientos observados -->
      <label for="establecimiento">Establecimientos Observados:</label>
      <select id="establecimiento" multiple>

         {{#each establecimientos}}
                  {{#if this.pertenece}}
                      <option value="{{this.id}}" selected>{{this.denominacion}}</option>
                  {{else}}
                      <option value="{{this.id}}">{{this.denominacion}}</option>
                  {{/if}}

         {{/each}}
      </select>

      <input type="hidden" id="comunidadId" value="{{comunidad.id}}">

     <button type="button" onclick="guardarComunidad()">Guardar</button>
    </form>


<script src="../js/editarComunidad.js"></script>
<script src="../js/cerrarSesion.js"></script>
<script src="https://kit.fontawesome.com/a39dd266ae.js" crossorigin="anonymous"></script>

</body>
</html>
